@{
    ViewData["Title"] = "Home Page";
}

@model User
<div class="text-center">
    
    <h2 class="text-info">Register</h2>
    <form asp-action="Register" asp-controller="Home" method="POST">
        <div class="font-weight-bold">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" /><br />
            <span asp-validation-for="FirstName" class="badge badge-danger"></span>
        </div>
        <div class="font-weight-bold">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" /><br />
            <span asp-validation-for="LastName" class="badge badge-danger"></span>
        </div>
        <div class="font-weight-bold">
            <label asp-for="Email"></label>
            <input asp-for="Email" /><br />
            <span asp-validation-for="Email" class="badge badge-danger"></span>
        </div>
        <div class="font-weight-bold">
            <label asp-for="Password"></label>
            <input asp-for="Password" /><br />
            <span asp-validation-for="Password" class="badge badge-danger"></span>
        </div>
        <div class="font-weight-bold">
            <label asp-for="Confirm"></label>
            <input asp-for="Confirm" /><br />
            <span asp-validation-for="Confirm" class="badge badge-danger"></span>
        </div>
        <button type="submit" class="btn btn-outline-success">Register</button>
    </form>

  <partial name="_LoginPartial"></partial>